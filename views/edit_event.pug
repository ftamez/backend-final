extends layout

block content
  h1 #{title}
  form(method='POST', action='/event/edit/'+event._id)
    #form-group
      label Title:
      input.form-control(name='title', type='text', value=event.title)
    #form-group
      label Author:
      input.form-control(name='author', type='text', value=event.author)
    #form-group
      label Body:
      textarea.form-control(name='body')= event.body
    br
    input.btn.btn-primary(type='submit',value='Submit')
